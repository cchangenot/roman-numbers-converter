{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "client/**",
    "jest.config.js"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-inferrable-types": "off",
    "quotes": "warn",
    "semi": "warn"
  }
}
